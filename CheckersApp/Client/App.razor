<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (!context.User.Identity.IsAuthenticated)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                <p>Nie masz uprawnieñ dostêpu do tego zasobu.@*You are not authorized to access this resource.*@</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Przepraszamy, pod tym adresem nic nie ma.@*Sorry, there's nothing at this address.*@</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
